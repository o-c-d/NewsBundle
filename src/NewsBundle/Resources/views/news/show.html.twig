{% extends '@OcdNews/base.html.twig' %}
{% trans_default_domain 'ocdnews' %}

{% block body_id 'news_show' %}

{% block main %}
{{parent()}}
    <h1>{{ news.title }}</h1>

    <p class="post-metadata">
        <span class="metadata"><i class="fa fa-calendar"></i> {{ news.publishedAt|date('d/m/Y') }}</span>
        {% if news.author is defined %}
        <span class="metadata"><i class="fa fa-user"></i> {{ news.author.fullName }}</span>
        {% endif %}
    </p>

    <p>{{ news.description }}</p>

    {{ news.content }}

    {#{ include('@OcdNews/news/_news_links.html.twig') }#}

    {#{ include('@OcdNews/news/_news_files.html.twig') }#}
    
    {{ include('@OcdNews/news/_news_tags.html.twig') }}

{% endblock %}

